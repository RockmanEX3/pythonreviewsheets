# My Solution


a = int(input("Type a"))
b = int(input("Type b"))
c = int(input("Type c"))

def chairsNeeded(classroom):
    if classroom%2 == 1:
        return((classroom//2)+1)
    else:
        return(classroom//2)

print(chairsNeeded(a) + chairsNeeded(b) + chairsNeeded(c))

# Intended Solution

a = int(input())
b = int(input())
c = int(input())
print(a // 2 + b // 2 + c // 2 + a % 2 + b % 2 + c % 2)
